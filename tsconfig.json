{
    "compilerOptions": {
        "target": "es2016",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
    }
}
